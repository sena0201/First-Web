@model _20T1020413.Web.Models.FilmSearchOutput
    Layout = null;
}

<p style="margin-left: 5px; margin-top: 10px;">
    Có
    <strong>@string.Format("{0:N0}", Model.RowCount)</strong>
    bản ghi trong tổng số
    <strong>@string.Format("{0:N0}", Model.PageSize)</strong>
    trang
</p>
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Tên Phim</th>
            <th>Đạo diễn</th>
            <th>Diễn viên chính</th>
            <th>Mô tả</th>
            <th>Thời lượng</th>
            <th>Thời gian chiếu</th>
            <th>Trailer</th>
            <th>Poster</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Data)
        {
            <tr>
                <td>@item.FilmName</td>
                <td>@item.Director</td>
                <td>@item.Performer</td>
                <td>@item.Description</td>
                <td>@item.Time</td>
                <td>@item.ShowTime</td>
                <td>@item.Trailer</td>
                <td>@item.Poster</td>
                <td class="text-right">
                    <a href="~/Film/Edit" class="btn btn-success">
                        <i class="glyphicon glyphicon-edit" title="Sửa"></i>
                    </a>
                    <a href="~/Film/Delete" class="btn btn-danger">
                        <i class="glyphicon glyphicon-trash" title="Xóa"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="text-center">
    <ul class="pagination">
        @for (int i = 1; i <= Model.PageCount; i++)
        {
            if (i == Model.Page)
            {
                <li class="active"><a href="#">@i</a></li>
            }
            else
            {
                <li><a href="javascript:;" onclick="doSearch(@i)">@i</a></li>
            }
        }
    </ul>
</div>
